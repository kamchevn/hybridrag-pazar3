# ----------------------------------------------------------------------------
# Apache Maven Wrapper startup script (official)
# ----------------------------------------------------------------------------

set -e

BASE_DIR=$(dirname "$0")
WRAPPER_DIR="$BASE_DIR/.mvn/wrapper"
WRAPPER_JAR="$WRAPPER_DIR/maven-wrapper.jar"
PROPS_FILE="$WRAPPER_DIR/maven-wrapper.properties"

if [ ! -f "$WRAPPER_JAR" ]; then
  mkdir -p "$WRAPPER_DIR"
  DIST_URL=$(sed -n 's/^distributionUrl=//p' "$PROPS_FILE")
  WRAP_URL=$(sed -n 's/^wrapperUrl=//p' "$PROPS_FILE")
  if command -v curl >/dev/null 2>&1; then
    curl -fsSL -o "$WRAPPER_JAR" "$WRAP_URL"
  elif command -v wget >/dev/null 2>&1; then
    wget -q -O "$WRAPPER_JAR" "$WRAP_URL"
  else
    echo "ERROR: Need curl or wget to download maven-wrapper.jar" >&2
    exit 1
  fi
fi

JAVA_CMD="${JAVA_HOME:+$JAVA_HOME/bin/}java"
exec "$JAVA_CMD" \
  -Dmaven.multiModuleProjectDirectory="$BASE_DIR" \
  -cp "$WRAPPER_JAR" \
  org.apache.maven.wrapper.MavenWrapperMain "$@"


